<div class="mt-4">
    <h1>Sign Up</h1>
    <form action="/sign-up" method="post">
        <div class="row">
            <div class="col-md-6">
                <label class="form-label w-100">First Name
                    <input type="text" class="form-control" name="firstName">
                </label>
            </div>
            <div class="col-md-6">
                <label class="form-label w-100">Last Name
                    <input type="text" class="form-control" name="lastName">
                </label>
            </div>
            <div class="col-md-12">
                <label class="form-label w-100">Email address
                    <input type="email" class="form-control" name="email">
                </label>
            </div>
            <div class="col-md-12">
                <label class="form-label w-100">Password
                    <input type="password" class="form-control" name="password">
                </label>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary btn-md px-4">Submit</button>
            </div>
        </div>
    </form>
</div>