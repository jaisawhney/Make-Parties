<div class="row mt-4">
    <div class="col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h3>New RSVP</h3>
                    <div class="lead">
                        Event: {{event.title}}
                    </div>
                </div>
                <div class="card-text">
                    <form action="/events/{{event.id}}/rsvps" method="post">
                        <div class="form-group">
                            <label for="title">Name</label>
                            <input name="name" id="title" class="form-control" placeholder="Jane Doe"/>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input name="email" id="email" class="form-control" placeholder="Jane.Doe@gmail.com"/>
                        </div>
                        <div class="text-end mt-2">
                            <a href="/events/{{event.id}}" class='text-muted mx-2 align-middle'>Cancel</a>
                            <button type="submit" class="btn btn-primary align-middle" name="button">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>